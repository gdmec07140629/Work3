<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/id"
    android:background="#080509">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:background="#0c0c0c" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="个人标准身高计算器"
        android:id="@+id/ww"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/scrollView"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="请输入你的体重"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ww"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textColor="#0a0a0a"
        android:background="#ffffff"
        android:layout_below="@+id/ww" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/weight"
        android:layout_toEndOf="@+id/weight"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="请选择你的性别："
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:id="@+id/man"
        android:checked="true"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="#ffffff" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女"
        android:id="@+id/woman"
        android:layout_alignTop="@+id/man"
        android:layout_toEndOf="@+id/man"
        android:checked="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运  算"
        android:id="@+id/calculator"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/result"
        android:layout_below="@+id/calculator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:textColor="#ffffff" />

</RelativeLayout>
